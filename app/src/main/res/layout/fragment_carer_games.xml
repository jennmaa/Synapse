<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_games"
    android:layout_marginBottom="70dp"
    tools:context=".screen.carer.modules.fragments.GamesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screen.carer.modules.Medication">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="18dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvSample"
            android:layout_width="0dp"
            android:layout_margin="18dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Set Games"
            android:textColor="@color/grey5"
            android:fontFamily="@font/redhat_display_semibold"
            android:textSize="17sp"/>

        <ImageView
            android:id="@+id/ivCarerProfilePic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/carer_profile_pic"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/pick_carer"
            android:scaleType="fitCenter"/>

    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/grey2"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/grey2"
            android:layout_gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSUN"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="SUN"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/grey5"
                android:textAllCaps="false"
                android:backgroundTint="@color/grey2"
                android:background="@drawable/rounded_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMON"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="MON"
                android:textAllCaps="false"
                android:textColor="@color/grey5"
                android:fontFamily="@font/inter_bold"
                android:backgroundTint="@color/grey2"
                android:background="@drawable/rounded_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTUE"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="TUE"
                android:textColor="@color/grey5"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:backgroundTint="@color/grey2"
                android:background="@drawable/rounded_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWED"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="WED"
                android:backgroundTint="@color/grey2"
                android:textColor="@color/grey5"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTHU"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="THU"
                android:textColor="@color/grey5"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:backgroundTint="@color/grey2"
                android:background="@drawable/rounded_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFRI"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="FRI"
                android:textColor="@color/grey5"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:backgroundTint="@color/grey2"
                android:background="@drawable/rounded_button"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSAT"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="SAT"
                android:textColor="@color/grey5"
                android:fontFamily="@font/inter_bold"
                android:textAllCaps="false"
                android:backgroundTint="@color/grey2"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

        <!-- recycle view for all carer users -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="?actionBarSize"
            android:id="@+id/recyclerview_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

    <!-- floating plus icon -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="Add Medicine"
        android:src="@drawable/ic_plus_white"
        app:tint="@android:color/white"
        app:useCompatPadding="true" />

</RelativeLayout>