<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.senior.test.CheckCarerEmail">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/osca_banner"/>

    <ImageView
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/banner_send_request"
        android:layout_margin="40dp"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:fontFamily="@font/redhat_display_bold"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/grey7"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat_display_semibold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="One more thing is we need \n to check if your account as a carer \n exist in our database "
        android:textSize="17sp"
        android:textColor="#9F9F9F"/>

    <!-- EMAIL -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:background="@drawable/rounded_text_login"
            android:fontFamily="@font/redhat_display_regular"
            android:hint="Email address"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="15dp"
            app:boxStrokeWidthFocused="0dp"
            android:padding="20dp"
            android:textColorHint="@color/grey4"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterSenior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?actionBarSize"
        android:layout_margin="25dp"
        android:background="@drawable/rounded_button_login"
        android:fontFamily="@font/redhat_display_bold"
        android:text="REGISTER SENIOR"
        android:textSize="15sp" />


</LinearLayout>