<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/search_view_stroke"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/medicineBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/horizontal_bg_1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivShapeOfPill"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/tvNameOfPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_display_bold"
                    android:layout_marginTop="5dp"
                    android:text="Levothyroxide"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvDoseOfPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_display_bold"
                    android:text="dose 2 | dosage 100mg"
                    android:textAlignment="textStart"
                    android:textColor="#EFEFEF" />

                <TextView
                    android:id="@+id/tvInTake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/redhat_display_semibold"
                    android:text="With Food"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/white" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_clock_white" />

            <TextView
                android:id="@+id/tvTimeOfMedicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/redhat_display_bold"
                android:text="4:30 PM"
                android:textSize="26sp"
                android:textAlignment="textEnd"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvIsTaken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:paddingRight="15dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="100dp"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/white"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivIsTaken"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:background="@android:color/transparent"
                        android:layout_height="match_parent" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>