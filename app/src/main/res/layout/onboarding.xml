<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".screen.Onboarding">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slideViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="82dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/slideViewPager"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/finishBtn"
        android:layout_width="287dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/redhat_display_bold"
        android:gravity="center"
        android:text="@string/btnFinish"
        android:textSize="15sp"
        android:visibility="invisible"
        app:icon="@drawable/ic_right_arrow"
        app:iconGravity="textEnd"
        app:iconPadding="10dp"
        app:iconTint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2022 • OSCA • Mandaluyong City"
        android:fontFamily="@font/redhat_display_regular"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="?actionBarSize"
        android:textColor="#0071B0" />


</RelativeLayout>