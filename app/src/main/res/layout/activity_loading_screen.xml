<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".screen.admin.LoadingScreen">

    <ImageView
        android:id="@+id/oscaLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="osca logo"
        android:layout_marginBottom="20dp"
        android:src="@drawable/osca_logo"/>
    
    <TextView
        android:id="@+id/tvOSCA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat_display_regular"
         android:textAlignment="center"
        android:textColor="@color/grey5"
        android:textSize="32sp"
        android:text="OSCA"/>
    
    <TextView
        android:id="@+id/tvMandaluyong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/redhat_display_regular"
        android:textAlignment="center"
        android:textColor="@color/grey5"
        android:textSize="15sp"
        android:text="Mandaluyong"/>

        <TextView
            android:id="@+id/tvProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhat_display_bold"
            android:textColor="@color/grey5"
            android:textSize="15sp"
            android:text="0 %"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/redhat_display_regular"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-20dp"
        android:layout_gravity="start"
        android:textColor="@color/grey5"
        android:textSize="15sp"
        android:text="Loading resources..."/>

</LinearLayout>