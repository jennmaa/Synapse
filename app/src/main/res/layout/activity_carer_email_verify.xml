<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".screen.carer.verification.Email">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:strokeWidth="2dp"
        app:cardCornerRadius="30dp"
        app:strokeColor="@color/light_green">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="128dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_email_verify" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Verify your email"
        android:textAlignment="center"
        android:fontFamily="@font/redhat_display_bold"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Account activation link has been sent to \n the e-mail address you provided"
        android:textAlignment="center"
        android:fontFamily="@font/redhat_display_regular"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?actionBarSize"
        android:orientation="vertical"
        android:layout_gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/rounded_button_login"
        android:fontFamily="@font/redhat_display_semibold"
        android:text="DONE"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center|bottom"
        android:textColor="#0071B0"
        android:text="© 2022 • OSCA • Mandaluyong City"/>

    </LinearLayout>

</LinearLayout>