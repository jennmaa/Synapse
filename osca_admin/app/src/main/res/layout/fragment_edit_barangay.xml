<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="?actionBarSize"
    tools:context=".fragments.EditBarangayFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- top nav -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="@font/redhat_display_bold"
            android:layout_marginStart="25dp"
            android:text="Edit Barangay"/>

    </LinearLayout>

    <!-- recycleview of barangay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textSize="15sp"
                android:text="Mandaluyong City Barangays"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTotalBarangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="9dp"
                android:textSize="28sp"
                android:text="27"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="9dp"
                android:textSize="16sp"
                android:text="Brgy"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/grey2"
        android:layout_margin="15dp"
        android:layout_height="2dp"/>

    <!-- recycle view for barangay -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_edit_barangay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarSize="5dp"
        android:scrollbarFadeDuration="0"
        android:scrollbarThumbVertical="@color/dark_green"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:orientation="horizontal"/>

</LinearLayout>