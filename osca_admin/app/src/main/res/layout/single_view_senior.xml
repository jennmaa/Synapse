<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#EFEFEF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivSeniorPic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_carer_profilepic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvSeniorID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: -NGM3KJLEPJ_o3zrIuGP"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold"/>

                <TextView
                    android:id="@+id/tvSeniorFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="full name: Rikki Mae Martinez"
                    android:textSize="14sp"
                    android:fontFamily="@font/redhat_display_semibold"/>

                <TextView
                    android:id="@+id/tvSeniorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email: rikkimae.martinez@my.jru.edu"
                    android:textSize="14sp"
                    android:fontFamily="@font/redhat_display_semibold"/>

                <TextView
                    android:id="@+id/tvSeniorAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="addr: Bingonan, Rizal"
                    android:textSize="14sp"
                    android:fontFamily="@font/redhat_display_semibold"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>