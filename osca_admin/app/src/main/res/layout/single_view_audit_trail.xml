<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        app:cardCornerRadius="10dp"
        app:strokeColor="@color/grey2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserIDAudit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/grey7"
            android:text="Entity ID: 13xgDi03Jghoqmck"/>

       <TextView
           android:id="@+id/tvFullNameAudit"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:textColor="@color/grey7"
           android:text="User: Nora Martinez (Senior)"/>

        <TextView
            android:id="@+id/tvActionMadeAudit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/grey7"
            android:text="Action Made: Took Medicine"/>

       <TextView
           android:id="@+id/tvDetailsAudit"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:textColor="@color/grey7"
           android:text="Details: Lisnopril 500mg"/>

       <TextView
           android:id="@+id/tvDateTimeAudit"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textSize="15sp"
           android:textColor="@color/grey7"
           android:text="Timestamp: Nov 19, 2022 8:32"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>